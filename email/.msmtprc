defaults

    auth            on
    tls             on
    tls_trust_file  /etc/ssl/certs/ca-certificates.crt
    logfile         $HOME/Mail/.smtp.log

account schwarmco

    from            joachim@schwarm.co
    user            schwarmco-0001
    passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt $HOME/Mail/.schwarmco.pass.smtp.gpg"
    host            smtp.udag.de
    port            25 
