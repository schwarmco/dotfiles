[general]

accounts            = schwarmco
starttls            = yes
ssl                 = yes
pythonfile          = ~/.offlineimap.py
maxsyncaccounts     = 1

[Account schwarmco]

localrepository     = schwarmco-local
remoterepository    = schwarmco-remote
autorefresh         = 5
quick               = 10

[Repository schwarmco-local]

type                = Maildir
localfolders        = $HOME/Mail/schwarmco

[Repository schwarmco-remote]
        
type                = IMAP
remotehost          = imap.udag.de
ssl                 = yes
sslcacertfile       = /etc/ssl/certs/ca-certificates.crt
remoteusereval      = mailuser("schwarmco")
remotepasseval      = mailpass("schwarmco")
keepalive           = 60
holdconnectionopen  = yes
