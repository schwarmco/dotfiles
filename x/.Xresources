! urxvt
urxvt.scrollBar: false
urxvt.internalBorder: 10

urxvt.font: xft:Source Code Pro:pixelsize=14:antialias=true:autohint=true
urxvt.boldFont: xft:Source Code Pro:pixelsize=14:style=bold
urxvt.letterSpace: -1

urxvt.perl-ext-common: default,matcher,keyboard-select
urxvt.url-launcher: /usr/bin/xdg-open
urxvt.matcher.button: 1
urxvt.keysym.M-Escape: perl:keyboard-select:activate

! st
*.font: monospace:pixelsize=14;Font Awesome 5 Free Solid:pixelsize=10:antialias=true:autohint=true
st.borderpx: 10

! color scheme
# include ".Xresources.d/paper-color.dark"
